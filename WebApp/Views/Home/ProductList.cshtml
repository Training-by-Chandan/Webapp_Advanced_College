@model IEnumerable<WebApp.Models.Product>
@using GridMvc.Html

@{
    ViewBag.Title = "ProductList";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}



@Html.Grid(Model).Columns(col=> {
    col.Add(c => c.ProductID);
    col.Add(c => c.ProductName);
    col.Add(c => c.UnitsInStock);
    col.Add(c => c.UnitPrice);
}).SetRowCssClasses(item => item.UnitsInStock<10 ? "warning" : string.Empty).WithPaging(10).Sortable(true).Filterable(true).WithMultipleFilters()